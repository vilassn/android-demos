<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivityService">

    <Button
        android:id="@+id/btnStartFgService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:background="@color/white"
        android:text="Start Foreground Service"
        android:textColor="#fff" />

    <Button
        android:id="@+id/btnStopFgService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:background="@color/white"
        android:text="Stop Foreground Service"
        android:textColor="#fff" />


    <Button
        android:id="@+id/btnStartBgService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:background="@color/white"
        android:text="Start Background Service"
        android:textColor="#fff" />

    <Button
        android:id="@+id/btnStopBgService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:background="@color/white"
        android:text="Stop Background Service"
        android:textColor="#fff" />
</LinearLayout>